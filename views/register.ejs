<% include partials/header %>
	<div id="signup"  class="container">
		<h1>New Users</h1>
		<!-- Form -->
	    <form action="/api/users"  method="POST">
	      <div class="js-form-message form-group mb-3">
	        <input type="text" class="form-control" name="name" placeholder="Name" required>
	      </div>

	      <div class="js-form-message form-group mb-3">
	        <input type="email" class="form-control" name="username" placeholder="Email address" required>
	      </div>

	      <div class="js-form-message form-group mb-3">
	        <input type="password" class="form-control" name="password" placeholder="Password" required>
	      </div>
	      <div class="d-flex justify-content-center">
	        <button type="submit" class="btn btn-primary btn-wide transition-3d-hover">Sign Up</button>
	      </div>
	    </form>
	</div>

<% include partials/footer %>